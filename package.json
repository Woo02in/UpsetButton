{
  "name": "upset-button",
  "version": "1.0.0",
  "description": "Upset Button",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install",
    "start": "NODE_ENV=production node server/index.js",
    "pm2:start": "pm2 start server/index.js --name upset-button",
    "pm2:stop": "pm2 stop upset-button",
    "pm2:restart": "pm2 restart upset-button"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "bcrypt": "^5.1.1",
    "sqlite3": "^5.1.6",
    "body-parser": "^1.20.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.2"
  }
}
